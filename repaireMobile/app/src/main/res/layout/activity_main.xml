                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/managePeople"
                    android:textColor="@color/black" />

            </RelativeLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>

