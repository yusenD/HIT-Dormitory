<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    android:orientation="vertical"
    tools:context=".view.PeopleDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_return" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/managePeople"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_edit" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginRight="@dimen/x30"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x30"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="姓名："
                android:textSize="@dimen/y26" />

            <EditText
                android:id="@+id/et_person_nickname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_gray_line"
                android:hint="请输入姓名"
                android:paddingStart="@dimen/x20"
                android:paddingLeft="@dimen/x20"
                android:textSize="@dimen/y28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="账号："
                android:textSize="@dimen/y26" />

            <EditText
                android:id="@+id/et_person_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_gray_line"
                android:hint="请输入账号"
                android:paddingStart="@dimen/x20"
                android:paddingLeft="@dimen/x20"
                android:textSize="@dimen/y28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="密码："
                android:textSize="@dimen/y26" />

            <EditText
                android:id="@+id/et_person_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_gray_line"
                android:hint="请输入密码"
                android:paddingStart="@dimen/x20"
                android:paddingLeft="@dimen/x20"
                android:textSize="@dimen/y28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="身份："
                android:textSize="@dimen/y26" />

            <RelativeLayout
                android:id="@+id/rl_person_limit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_gray_line"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_person_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x20"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="请选择人员身份"
                    android:textColor="@color/black"
                    android:textSize="@dimen/y28" />

                <ImageView
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/y30"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@drawable/ic_forward" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginBottom="@dimen/y40"
        android:background="@drawable/bg_green_full"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/y35" />


</LinearLayout>